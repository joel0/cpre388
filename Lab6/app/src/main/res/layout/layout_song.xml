<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/songHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/songTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/songHeader"
        android:layout_toEndOf="@id/songHeader"
        android:text="TextView" />

    <TextView
        android:id="@+id/albumHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/songHeader"
        android:text="@string/album"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/albumTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/albumHeader"
        android:layout_toEndOf="@id/albumHeader"
        android:layout_below="@id/songTitle"
        android:text="TextView" />
</RelativeLayout>
